<script>
    const header = document.getElementById('accordion-header');
    const content = document.getElementById('accordion-content');
    const icon = document.getElementById('accordion-icon');

    header.addEventListener('click', () => {
        const isOpen = content.classList.contains('hidden');
        
        // Toggle visibility of content
        content.classList.toggle('hidden', !isOpen);
        // Toggle rotation of icon
        icon.classList.toggle('rotate-180', !isOpen);
        
        // Update aria-expanded attribute with string "true" or "false"
        header.setAttribute('aria-expanded', isOpen.toString());

        // Prevent background color change when opened
        if (!isOpen) {
            header.classList.add('bg-info');
        }
    });
</script>
